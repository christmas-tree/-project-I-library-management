<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="window" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.basic.IndexController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu fx:id="menuFile" mnemonicParsing="false" text="Hệ thống">
                    <items>
                  <MenuItem fx:id="logOutMenu" mnemonicParsing="false" text="Đăng xuất" />
                        <MenuItem fx:id="exitMenu" mnemonicParsing="false" text="Thoát" />
                    </items>
                </Menu>
                <Menu fx:id="menuEdit" mnemonicParsing="false" text="Chỉnh sửa">
                    <items>
                  <MenuItem fx:id="addMenu" mnemonicParsing="false" text="Thêm" />
                  <MenuItem fx:id="editMenu" mnemonicParsing="false" text="Sửa" />
                        <MenuItem fx:id="deleteMenu" mnemonicParsing="false" text="Xoá" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="exportMenu" mnemonicParsing="false" text="Xuất file" />
                    </items>
                </Menu>
                <Menu fx:id="menuHelp" mnemonicParsing="false" text="Trợ giúp">
                    <items>
                        <MenuItem fx:id="aboutMenu" mnemonicParsing="false" text="Giới thiệu" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <VBox fx:id="leftVBox" xmlns:fx="http://javafx.com/fxml">
            <children>
                <TreeView fx:id="sideMenu" maxHeight="1.7976931348623157E308" prefHeight="741.0" prefWidth="200.0" showRoot="false" />
            </children>
        </VBox>
    </left>
    <bottom>
        <HBox alignment="CENTER">
            <Label fx:id="footerNote" alignment="CENTER" contentDisplay="CENTER" text="Trần Trung Nghĩa - 20173281 - © 2019" textAlignment="CENTER" />
